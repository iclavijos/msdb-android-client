<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <TextView
        android:id="@+id/notificationMessageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/seriesLogoCompactImageView"
        android:text="@string/upcomingSessionMessage"
        android:textAppearance="@style/TextAppearance.Compat.Notification.Line2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/seriesLogoCompactImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:scaleType="centerInside"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>

