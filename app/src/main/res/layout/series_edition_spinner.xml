<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/series_edition_spinner_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="series logo"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/series_edition_spinner_series_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/series_edition_spinner_logo"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:layout_toEndOf="@+id/series_edition_spinner_logo"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>